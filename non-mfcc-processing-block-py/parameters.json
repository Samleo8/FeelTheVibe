{
    "version": 1,
    "info": {
        "title": "Non-MFCC Features",
        "author": "Samuel Leong",
        "description": "Generating non-MFCC features, including Chroma, ZCR, RMS, etc.",
        "name": "Non-MFCC Features",
        "cppType": "custom_block",
        "preferConvolution": false,
        "visualization": "dimensionalityReduction",
        "experimental": false,
        "latestImplementationVersion": 1
    },
    "parameters": [
        {
            "group": "LPCC",
            "items": [
                {
                    "name": "LPC Order",
                    "value": 10,
                    "type": "int",
                    "help": "Order of filter used in linear prediction coding. If <=0, LPC is not used.",
                    "param": "lpc_order"
                },
                {
                    "name": "Number of LPCC Coefficients",
                    "value": 13,
                    "type": "int",
                    "help": "Number of LPCC coefficients to use. Must be >= lpc_order + 1",
                    "param": "num_lpcc"
                }
            ]
        },
        {
            "group": "Other Features to Include",
            "items": [
                {
                    "name": "Chroma",
                    "value": true,
                    "type": "boolean",
                    "help": "Whether to include Chroma STFT",
                    "param": "use_chroma"
                },
                {
                    "name": "ZCR",
                    "value": true,
                    "type": "boolean",
                    "help": "Whether to include zero-crossing rate",
                    "param": "use_zcr"
                },
                {
                    "name": "RMS",
                    "value": false,
                    "type": "boolean",
                    "help": "Whether to include root-mean-square",
                    "param": "use_rms"
                }
            ]
        }
    ]
}